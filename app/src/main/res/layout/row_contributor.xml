<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/row_contributor_rl">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_contributor_image"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/row_contributor_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:textColor="?android:attr/textColorPrimary"
        android:alpha="0.84"
        android:maxLines="1"
        android:layout_toRightOf="@id/row_contributor_image"/>

    <TextView
        android:id="@+id/row_contributor_contributions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:alpha="0.54"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:layout_toRightOf="@id/row_contributor_image"
        android:layout_below="@id/row_contributor_login"/>

</RelativeLayout>