<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/repo_fragment_readme_ll">

    <ProgressBar
        android:id="@+id/repo_fragment_readme_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:visibility="gone" />

    <com.mukesh.MarkdownView
        android:id="@+id/repo_fragment_readme_markedview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/repo_fragment_readme_progressbar">

    </com.mukesh.MarkdownView>

    <TextView
        android:id="@+id/repo_fragment_readme_noreadme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_readme"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>