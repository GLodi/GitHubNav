<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/row_search_user_ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/row_search_user_fullname"
            android:text="Fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:alpha="0.84"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/row_search_user_username"
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:alpha="0.54"
            android:maxLines="1"
            android:paddingTop="2dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_search_user_reposicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_book_blue_24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/row_search_user_repos"
            android:text="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:alpha="0.54"
            android:maxLines="1"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/row_search_user_reposicon"/>

        <ImageView
            android:id="@+id/row_search_user_followersicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_people_blue_24dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/row_search_user_reposicon"/>

        <TextView
            android:id="@+id/row_search_user_followers"
            android:text="235"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:alpha="0.54"
            android:maxLines="1"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/row_search_user_followersicon"/>

    </RelativeLayout>

</LinearLayout>